list = [list1, list2, list3, list4]
print("HERE ARE THE DIFFERNET PATHS FOR TRAVELLING : ", list)
print("SO THIS IS THE MINIMUM COST FROM THE PATHS THE SALESPERSON TRAVELLED : ",
      travellingSalesmanProblem(graphs_list, st_city, V))
selected = [0, 0, 0, 0, 0]
no_edge = 0
selected[0] = True
print("Edge : Weight\n")
while no_edge < V - 1:
    minimum = INF
    x = 0
    y = 0
    for i in range(V):
        if selected[i]:
            for j in range(V):
                if (not selected[j]) and G[i][j]:
                    # not in selected and there is an edge
                    if minimum > G[i][j]:
                        minimum = G[i][j]
                        x = i
                        y = j
    print(str(x) + "-" + str(y) + ":" + str(G[x][y]))
    selected[y] = True
    no_edge += 1
