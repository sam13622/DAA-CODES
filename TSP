print("ENTER PATH2 COSTS:")
for i in range(number):
    cost1 = int(input("COST1 = "))
    list2.append(cost1)
    cost2 = int(input("COST2 = "))
    list2.append(cost2)
    cost3 = int(input("COST3 = "))
    list2.append(cost3)
    cost4 = int(input("COST4 = "))
    list2.append(cost4)
    break
print("ENTER PATH3 COSTS:")
for i in range(number):
    cost1 = int(input("COST1 = "))
    list3.append(cost1)
    cost2 = int(input("COST2 = "))
    list3.append(cost2)
    cost3 = int(input("COST3 = "))
