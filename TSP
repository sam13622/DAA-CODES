INF = 9999999
V = 5
G = [[0, 9, 75, 0, 0],
     [9, 0, 95, 19, 42],
     [75, 95, 0, 51, 66],
     [0, 19, 51, 0, 31],
     [0, 42, 66, 31, 0]]
print("[ TRAVELLING SALESPERSON PROBLEM USING DP ]")
V = int(input("ENTER THE NUMBER OF CITIES THE SALESPERSON WANTS TO VISIT : "))
